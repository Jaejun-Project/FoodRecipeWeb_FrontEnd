<div class="container">
  <h2> Create your own recipe</h2><br>
  <form onsubmit={{action "createRecipe"}}>
    <div class="form-group">
      <label for="title"><b>Food Name:</b></label>
      {{input class="form-control" type="text" id="title" value=title}}
    </div>
    <div class="form-group">
      <label for="img"><b>Img URL:</b></label>
      {{input class="form-control" type="text" id="img" value=img}}
    </div>
    <div class="form-group">
      <label for="calorie"><b>Calorie</b></label>
      {{input type="text" class="form-control" id="calorie" value=calorie}}
      <NumberValidate
        @calorie={{calorie}}
      >
      </NumberValidate>
    </div>
    <div class="form-group">
      <label for="time"><b>Cooking Time</b></label>
      {{input class="form-control" type="text" id="time" value=time}}
      <NumberValidate
        @calorie={{time}}
      >
      </NumberValidate>
    </div>
    <div class="form-group">
      <h4>Recipe:</h4>
      {{textarea
        for="ingredient"
        class="form-control"
        id="ingredient"
        rows="8"
        cols="80"
        value=ingredient
      }}
    </div>
    <button data-test="create" type="submit">Save</button>
  </form>
</div>
